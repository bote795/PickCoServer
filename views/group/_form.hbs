<form action="{{view.action}}" role="form" method="post" style="max-width:300px">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" placeholder="name" value="{{group.name}}">
  </div>
  <div class="form-group">
    <label for="Description">Description</label>
    <input type="text" class="form-control" name="desc" placeholder="name" value="{{group.desc}}">
  </div>
  {{#if view.put}}
    <div class="form-group">
      <input type="hidden" class="form-control" name="_method" value="PUT">
      </div>  
  {{/if}}
  <button type="submit" class='btn btn-default'>Submit</button>
  <a href="{{view.action}}">
    <button class="btn btn-primary" type="button">Cancel</button>
  </a>

</form>