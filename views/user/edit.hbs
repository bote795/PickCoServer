<div class="container">
	<h1>Edit Profile</h1>
	{{#if expressFlash}}
	    <p><strong>{{ expressFlash }}</strong></p>
	{{/if}}
	<form action="/edit" role="form" method="post" enctype="multipart/form-data" style="max-width: 300px;">
		<div class="form-group">
			<label for="email">Email</label>
			<input type="email" name="email" class="form-control" value="{{user.email}}">
		</div>
		<div class="form-group">
			<label for="Bio">Bio</label>
			<textarea type="text" name="bio" class="form-control">
			{{user.bio}}
			</textarea>
		</div>
		<div id="pAvatars">
			<p>Previous Avatars</p>
			{{#user.avatars}}
				<img class="avatars" id="{{this}}" src="/images/{{this}}" height="160" width="160">	
			{{/user.avatars}}
		</div>
		<p>current Image</p>
		{{#if user.image}}
		  <img src="/images/{{user.image}}" height="160" width="160">
		{{/if}}
		<div class="form-group">
			<input id="Pimage" type="hidden" name="Oldimage" class="form-control" value="">
		</div>
		
		<div class="form-group">
			<label for="file">update avatar Image</label>
			<input type="file" name="image" class="form-control">
		</div>
		<button class="btn btn-default" type="submit">Submit</button>
		<a href="/">
			<button type="button" class="btn btn-primary">Cancel</button>
		</a>	
	</form>	
	<style>
		img{
			margin: 8px;
		}
	</style>
	<script src="js/chooseAvatar.js"></script>
</div>
